<%= form_with(model: article, local: true) do |form| %>

  <div>
    <%= form.label :title %>
  </div>
  <div>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content %>
  </div>
  <div>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
