<!DOCTYPE html>
<html>
  <head>
    <title>RaiBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <a href="/login">Log In</a>
    <a href="/logout" data-method="delete">Log Out</a>

    <% flash.each do |key, value| %>
      <% if key ==  'warning' %>
        <% value.each do |error| %>
          <p>RED TEXT - <%= error %></p>
        <% end %>
      <% elsif key == 'success' %>
        <p>GREEN TEXT - <%= value %></p>
      <% end %>
        <!--       <%= flash[:success] %>
      <%= flash[:warning] %> -->
    <% end %>
    
    <%= @jwt %>
        <%= yield %>
  </body>
</html>
